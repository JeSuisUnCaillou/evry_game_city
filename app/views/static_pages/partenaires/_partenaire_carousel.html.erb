

<% nbpart = 8 %>
<% nb_display = 6 %>

<div class="carousel-partenaires">

<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    <% (1..nbpart).each do |i| %>
      <div class="item <%= "active" if i == 1 %>">
        <div class="row">
          <% display_a = (i..nbpart).to_a.concat((1..(i - 1)).to_a).take(nb_display) %>
          <% display_a.each do |j| %>
            <div class="col-md-2">
              <%#= image_tag t("partenaire-#{j}.image"),
                            class: "img-responsive center-block",
                            alt: t("partenaire-#{j}.name") %>               
              <%= render partial: 'static_pages/partenaires/partenaire_mosaique', locals: { i:j } %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div><!-- carousel inner -->

  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

</div>
